<div class="container">
  <%= render "layouts/errors" %>

  <h1>Sign In</h1>

  <div class="row">
    <form role="form" class="col-md-3"
      action="<%= session_url %>" method="post">
      <%= auth_token_input %>
      <div class="form-group">
        <label>
          Email<br>
          <input type="text" class="form-control" name="user[email]">
        </label>
      </div>
      <div class="form-group">
        <label>
          Password<br>
          <input type="password" class="form-control" name="user[password]">
        </label>
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Login">
      </div>
      <a href="<%= new_user_url %>">New to Trellino?</a>
    </form>
  </div>

</div>
