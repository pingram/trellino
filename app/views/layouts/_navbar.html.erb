  <div class="container">

    <a class="navbar-brand" href="#">Trellino</a>

    <% if logged_in? %>
    <ul class="nav navbar-nav">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Boards</a>
        <ul class="dropdown-menu">
