<form role="form">
  <input type="hidden" name="card[rank]" value="<%= newRank %>">
  <div class="form-group row">
    <div class="col-md-12">
      <textarea rows="3" class="card-title form-control" name="card[title]">
      </textarea>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-2">
      <input type="submit" class="btn btn-sm btn-success" value="Add">
    </div>
    <div class="col-md-1">
      <button type="button" class="btn btn-md close-btn">X</button>
    </div>
  </div>
  
</form>