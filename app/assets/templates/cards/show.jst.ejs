<div class="row">
  <div class="col-md-10">
    Title: <%= card.escape('title') %><br>
  </div>
  <div class="col-md-2">
    <button type="button" class='delete-card btn btn-xs btn-danger'>X</button>
  </div>



<!-- Modal -->
